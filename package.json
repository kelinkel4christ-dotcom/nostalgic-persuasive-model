{
  "name": "nostalgic-persuasive-model",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenv -e .env -- drizzle-kit migrate",
    "db:seed": "bun run ./server/database/seed.ts",
    "db:studio": "dotenv -e .env -- drizzle-kit studio",
    "db:start": "docker compose up -d cockroach",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down",
    "db:destroy": "docker compose down -v",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky",
    "dev:all": "concurrently -k -n \"APP,DB,STUDIO\" -c \"blue,green,magenta\" \"bun run dev\" \"docker compose up\" \"bun run db:studio\""
  },
  "dependencies": {
    "@nuxt/eslint": "1.12.1",
    "@nuxt/hints": "1.0.0-alpha.5",
    "@nuxt/image": "2.0.0",
    "@nuxt/ui": "4.3.0",
    "@pinia/nuxt": "0.11.3",
    "@vueuse/nuxt": "14.1.0",
    "better-auth": "^1.4.10",
    "csv-parse": "^6.1.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "eslint": "^9.0.0",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "postgres": "^3.4.8",
    "typescript": "^5.6.3",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@iconify-json/lucide": "^1.2.84",
    "@types/nodemailer": "^7.0.5",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "lint-staged": {
    "*.{ts,vue,js,json}": [
      "bun lint",
      "bun format",
      "bun test:related"
    ]
  }
}
